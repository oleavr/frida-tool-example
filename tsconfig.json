{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2022",
    "lib": ["es2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": [
    "bin/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "lib/agent/**/*"
  ]
}
